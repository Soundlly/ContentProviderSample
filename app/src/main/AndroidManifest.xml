<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.bitsound.contentprovidersample">

    <permission android:name="${localProviderPermission}"/>
    <uses-permission android:name="${localProviderPermission}"/>
    <uses-permission android:name="${sharedProviderPermission}"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SampleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
            android:name=".SampleContentProvider"
            android:enabled="true"
            android:exported="true"
            android:authorities="${localProviderAuthority}"
            android:readPermission="${localProviderPermission}"
            android:writePermission="${localProviderPermission}"/>
    </application>

</manifest>
